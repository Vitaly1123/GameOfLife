<Window x:Class="GameOfLife.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Гра Життя" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Гра Життя" FontSize="36" FontWeight="Bold" Margin="0,0,0,40" HorizontalAlignment="Center"/>
            <Button Content="Грати" Name="PlayButton" Click="PlayButton_Click" Width="150" Height="40" Margin="0,10"/>
            <Button Content="Вихід" Name="ExitButton" Click="ExitButton_Click" Width="150" Height="40" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>